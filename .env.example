# Voice AI Platform - Complete Environment Configuration
# Copy this file to .env and customize values for your environment
# NEVER commit .env files with real credentials to version control

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
APP_NAME="Voice AI Platform"
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
LOG_FORMAT=json

# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================
HOST=0.0.0.0
PORT=9847
RELOAD_ON_CHANGE=true
RELOAD_DIRS=src,static
WORKERS=4
CORS_ORIGINS=http://localhost:9847,http://127.0.0.1:9847

# ==============================================================================
# PRACTICE INFORMATION
# ==============================================================================
PRACTICE_NAME="Your Practice Name"
PRACTICE_TIMEZONE="America/New_York"

# ==============================================================================
# EMR INTEGRATION (OpenEMR/FHIR)
# ==============================================================================
EMR_BASE_URL="https://your-emr-instance.com"
EMR_CLIENT_ID="your_oauth_client_id"
EMR_CLIENT_SECRET="your_oauth_client_secret"
EMR_REDIRECT_URI="http://localhost:9847/auth/callback"

# ==============================================================================
# OPENAI CONFIGURATION
# ==============================================================================
OPENAI_API_KEY="sk-..."
OPENAI_MODEL="gpt-4"

# ==============================================================================
# TWILIO CONFIGURATION (Voice/SMS)
# ==============================================================================
TWILIO_ACCOUNT_SID="AC..."
TWILIO_AUTH_TOKEN="..."
TWILIO_PHONE_NUMBER="+1-555-0101"
MAX_CALL_DURATION_MINUTES=10

# ==============================================================================
# AZURE SPEECH SERVICES
# ==============================================================================
AZURE_SPEECH_KEY="..."
AZURE_SPEECH_REGION="westus2"

# ==============================================================================
# OPERATIONAL HOURS (24-hour format)
# ==============================================================================
HOURS_MONDAY="08:00-17:00"
HOURS_TUESDAY="08:00-17:00"
HOURS_WEDNESDAY="08:00-17:00"
HOURS_THURSDAY="08:00-17:00"
HOURS_FRIDAY="08:00-17:00"
HOURS_SATURDAY="08:00-13:00"
HOURS_SUNDAY="closed"

# ==============================================================================
# SECURITY & AUTHENTICATION
# ==============================================================================
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=changeme

# ==============================================================================
# AUDIT & COMPLIANCE
# ==============================================================================
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_FILE=audit.log
AUDIT_LOG_ROTATION_MB=10

# ==============================================================================
# DEVELOPMENT SETTINGS
# ==============================================================================
# Set to true to use mock services instead of real APIs
ALLOW_DEV_DEFAULTS=false

# ==============================================================================
# TESTING CONFIGURATION
# ==============================================================================
PYTEST_CACHE_DIR=.pytest_cache
COVERAGE_MIN_THRESHOLD=80

# ==============================================================================
# BUILD SETTINGS
# ==============================================================================
BUILD_TARGET=windows
BUILD_NAME=voice-ai-platform
